<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2.SegundaPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre:" FontSize="19" Padding="5, 0, 5, 0" TextColor="Black"/>
            <Label Text="{Binding nombre}" FontSize="Title" Padding="10, 0, 5, 0" TextColor="Red"/>

            <Label Text="Apellido:" FontSize="19" Padding="5, 15, 5, 0" TextColor="Black"/>
            <Label Text="{Binding apellido}" FontSize="Title" Padding="10, 0, 5, 0" TextColor="Red"/>

            <Label Text="Edad:" FontSize="19" Padding="5, 15, 5, 0" TextColor="Black"/>
            <Label Text="{Binding edad}" FontSize="Title" Padding="10, 0, 5, 0" TextColor="Red"/>

            <Label Text="Correo Electrónico:" FontSize="19" Padding="5, 15, 5, 0" TextColor="Black"/>
            <Label Text="{Binding correo}" FontSize="Title" Padding="10, 0, 5, 0" TextColor="Red"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>